#!/bin/bash

# Name of the private key
private_key_name="school"

# Number of bits in the key
key_bits=4096

# Passphrase for the key
passphrase="betty"

# Generate RSA key pair
openssl genpkey -algorithm RSA -out "$private_key_name".pem -aes256 -pass pass:"$passphrase" -aes256 -aes256 -passout pass:"$passphrase" -aes256 -aes256 -passout pass:"$passphrase" -aes256 -aes256 -passout pass:"$passphrase" -aes256 -aes256 -passout pass:"$passphrase" -aes256 -aes256 -passout pass:"$passphrase"

# Display success message
echo "RSA key pair generated successfully:"
echo "Private key: $private_key_name.pem"
echo "Passphrase: $passphrase"
