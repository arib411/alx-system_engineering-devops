#!/bin/bash

# Define the IP addresses you want to set
localhost_ip="127.0.0.2"
facebook_ip="8.8.8.8"

# Update the /etc/hosts file
echo "$localhost_ip localhost" | sudo tee -a /etc/hosts
echo "$facebook_ip facebook.com" | sudo tee -a /etc/hosts

# Restart the networking service to apply changes (you may need to adapt this based on your Ubuntu version)
sudo systemctl restart networking

# Print a message indicating the configuration is complete
echo "DNS resolution configured:"
echo "localhost resolves to $localhost_ip"
echo "facebook.com resolves to $facebook_ip"
